<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Forms.cyan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nightprimary</item>
        <item name="colorPrimaryVariant">@color/nightprimarydark</item>
        <item name="android:colorBackground">#1f2732</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">?attr/colorPrimary</item>
        <item name="android:windowBackground">@color/nightwindowbg</item>
        <item name="colorAccent">@color/nightprimary</item>
    </style>


    <style name="Theme.App" parent="Theme.MaterialComponents">
        ...
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">?attr/colorPrimaryVariant</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>

</resources>